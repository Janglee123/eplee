{
  "author": "janglee123 <merupatel123@gmail.com>",
  "build": {
    "publish": null,
    "appId": "org.janglee123.eplee",
    "artifactName": "${name}-${arch}-${version}.${ext}",
    "asar": true,
    "directories": {
      "output": "build/"
    },
    "dmg": {
      "contents": [
        {
          "path": "/Applications",
          "type": "link",
          "x": 410,
          "y": 230
        },
        {
          "type": "file",
          "x": 130,
          "y": 230
        }
      ],
      "window": {
        "height": 380,
        "width": 540
      }
    },
    "files": [
      "dist/**/*",
      "build/*"
    ],
    "linux": {
      "icon": "build/icons/512x512.png",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icons/512x512.png",
      "target": [
        "dmg",
        "zip"
      ],
      "type": "distribution"
    },
    "npmRebuild": true,
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "productName": "Eplee",
    "win": {
      "icon": "build/icons/512x512.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^2.8.0",
    "blob-to-buffer": "^1.2.8",
    "electron-localshortcut": "^3.1.0",
    "element-ui": "^2.8.2",
    "epubjs": "^0.3.84",
    "file-url": "^3.0.0",
    "node-vibrant": "^3.2.0-alpha",
    "save-file": "^2.3.1",
    "vue": "^2.6.10",
    "vue-bus": "^1.2.1",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.0.6",
    "vuex": "^3.1.0"
  },
  "description": "sweet simple epub reader",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-component": "^1.1.1",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "devtron": "^1.4.0",
    "electron": "~4.1.4",
    "electron-builder": "^20.39.0",
    "electron-debug": "^2.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-vue": "^5.2.2",
    "fast-glob": "^2.2.6",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-loader": "^0.6.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.17.0",
    "purgecss-webpack-plugin": "^1.5.0",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-loader": "^0.23.1",
    "tree-kill": "1.2.2",
    "url-loader": "^1.1.2",
    "vue-devtools": "^5.0.0-beta.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.7.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-hot-middleware": "^2.24.3"
  },
  "license": "MIT",
  "main": "./dist/main.js",
  "name": "eplee",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janglee123/eplee.git"
  },
  "scripts": {
    "build": "yarn run pack && electron-builder",
    "build:linux": "yarn run pack && electron-builder --linux",
    "build:mac": "yarn run pack && electron-builder --mac",
    "build:win": "yarn run pack && electron-builder --win",
    "dev": "node ./_scripts/dev-runner.js",
    "lint": "eslint --ext .js,.vue --fix src && prettier --write ./src/**/*.js",
    "pack": "yarn run pack:main && yarn run pack:renderer",
    "pack:main": "webpack --mode=production --env.NODE_ENV=production --hide-modules --config ./_scripts/webpack.main.config.js",
    "pack:renderer": "webpack --mode=production --env.NODE_ENV=production --hide-modules --config ./_scripts/webpack.renderer.config.js",
    "postinstall": "electron-builder install-app-deps",
    "release": "build"
  },
  "version": "0.4.0"
}
